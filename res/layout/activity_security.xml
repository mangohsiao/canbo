<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/head_bkground" >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent" >
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:textSize="22sp"
                android:textColor="@color/canbo_color_green_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全防护" />
            
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            
            <LinearLayout 
                android:id="@+id/security_line_setting"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/opt_item_button_selector">
                
	            <TextView 
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:layout_marginRight="5dp"
	                android:text="设置"
	                android:textSize="18sp" />
	            
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>	<!-- end of head -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_weight="1.0"
                android:id="@+id/security_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opt_item_button_selector"
                android:text="启动" />

            <Button
                android:layout_weight="1.0"
                android:id="@+id/security_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opt_item_button_selector"
                android:text="卸除" />

            <Button
                android:layout_weight="1.0"
                android:id="@+id/security_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opt_item_button_selector"
                android:text="其他" />

            <Button
                android:layout_weight="1.0"
                android:id="@+id/security_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opt_item_button_selector"
                android:text="其他" />
            
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/security_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
