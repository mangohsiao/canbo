<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout 
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:background="@drawable/camera_icon"
            android:layout_margin="1dp"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
        
        <LinearLayout
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
	        <TextView
	            android:id="@+id/txv_cam_item_name"
	            android:layout_marginLeft="8dp"
	            android:textSize="20sp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Emos" />
	        <TextView
	            android:textColor="#aaaaaa"
	            android:id="@+id/txv_cam_item_ip"
	            android:layout_marginTop="2dp"
	            android:layout_marginLeft="8dp"
	            android:textSize="14sp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="222.222.222.222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cam_list_down_line_icon"
            android:visibility="visible"
            android:background="@drawable/cam_list_item_icon_down"
            android:orientation="vertical" 
            android:layout_height="match_parent"
            android:layout_width="30dp">
        </LinearLayout>
       	    
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:background="@drawable/cam_list_down_bg"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/linearlayout_cam_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearlayout_cam_edit"
                android:background="@drawable/opt_item_button_selector"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/btn_cam_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑" />
                
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearlayout_cam_preview"
                android:background="@drawable/opt_item_button_selector"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/btn_cam_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预览" />

            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
