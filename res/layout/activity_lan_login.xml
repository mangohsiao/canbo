<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/txv_lan_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="LAN登录" />

	    <ImageView
	        android:id="@+id/imageView2"
        	android:layout_weight="0.1"
	        android:layout_width="230dp"
	        android:layout_height="120dp"
	        android:layout_gravity="center_horizontal"
	        android:src="@drawable/wifi_icon" />
	    
	</LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txv_lan_log_ip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="IP地址"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtx_lan_log_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="125.216.243.205"
            android:ems="15" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txv_lan_log_account"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtx_lan_log_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txv_lan_log_pswd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtx_lan_log_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txv_lan_log_CMUID"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="CMU_ID"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtx_lan_log_CMUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
	        <CheckBox
	            android:id="@+id/checkBox1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="记住IP" />
	
	        <CheckBox
	            android:id="@+id/checkBox2"
				android:layout_marginLeft="60dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="记住流水号" />
            
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住账号密码" />

    </LinearLayout>

    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal" >
        
	    <Button
	        android:id="@+id/btn_lan_login_getid"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:background="@drawable/opt_item_button_selector"
	        android:text="获取ID" />
        
	    <Button
	        android:id="@+id/btn_lan_login_yes"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="2"
	        android:background="@drawable/opt_item_button_selector"
	        android:text="确定" />
	    
    </LinearLayout>


</LinearLayout>