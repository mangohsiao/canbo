<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/opt_item_multbg_mid_selector"
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/imgv_dev_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="0dp"
		android:layout_gravity="center_vertical"
		android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_marginLeft="8dp"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="horizontal" >
	    <TextView
	        android:id="@+id/txv_dev_name"
	        android:layout_gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:text="TextView" />
    </LinearLayout>

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical|right"
	    android:layout_marginRight="5dp"
	    android:orientation="horizontal" >
	    <ImageView
	        android:id="@+id/imgv_jiantou"
	        android:layout_width="20dip"
	        android:layout_height="20dip"
	        android:src="@drawable/jiantou_2" />

	    <LinearLayout
	        android:visibility="gone"
	        android:id="@+id/device_line_btnOnOff"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal">
		    <Button
		        android:id="@+id/device_btn_on"
		        android:background="@drawable/opt_item_button_selector"
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:text="开" />
		    <Button
		        android:id="@+id/device_btn_off"
		        android:background="@drawable/opt_item_button_selector"
		        android:layout_width="60dp"
		        android:layout_height="wrap_content"
		        android:text="关" />
		</LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
    <!-- 
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal" >
	    <ImageView
	        android:id="@+id/imgv_jiantou"
	        android:layout_width="20dip"
	        android:layout_height="20dip"
	        android:src="@drawable/jiantou_2" />
    </LinearLayout>
     -->
</LinearLayout>